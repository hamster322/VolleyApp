<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_in_Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/Log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Логин: "
        android:textSize="30dp"
        android:layout_marginTop="250dp"

        app:layout_constraintRight_toRightOf="@+id/Pas"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/Pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль: "
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Log"
        />
    <EditText
        android:id="@+id/Login_input"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/Log"
        app:layout_constraintTop_toTopOf="@+id/Log"
        app:layout_constraintBottom_toBottomOf="@+id/Log"
        />
    <EditText
        android:id="@+id/Password_input"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/Pas"
        app:layout_constraintTop_toTopOf="@+id/Pas"
        app:layout_constraintBottom_toBottomOf="@+id/Pas"
        />
    <Button
        android:id="@+id/Sign_in_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password_input"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:id="@+id/Sign_up_text_in_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ещё нет аккаунта?\nЗарегистрируйся!"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/Sign_in_Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/Sign_up_button_in_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        app:layout_constraintTop_toBottomOf="@+id/Sign_up_text_in_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#FEF7FF"
        android:textColor="@android:color/darker_gray"
        />
    <TextView
        android:id="@+id/Error_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Sign_up_button_in_sign_in"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/Del_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Error_output"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Удалить"
        />

</androidx.constraintlayout.widget.ConstraintLayout>